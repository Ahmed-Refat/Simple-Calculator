// simple calculator
#include <iostream>
using namespace std;
int main() {
    
    int num1,op,num2;
    cout << "enter the num1: \n";
    cin >> num1;
    
    cout << "choose the operation: \n";
    cout << "[1] + \n";
    cout << "[2] - \n";
    cout << "[3] / \n";
    cout << "[4] * \n";
    cin >> op;
    
    cout << "enter the num2: \n";
    cin >> num2;
    
    switch (op)
    {
        case 1:
          cout << num1 << " + " << num2 << " = " << num1 + num2;
          break;
        case 2:
          cout << num1 << " - " << num2 << " = " << num1 - num2;
          break;
        case 3:
          cout << num1 << " / " << num2 << " = " << num1 / num2;
          break;
        case 4:
          cout << num1 << " * " << num2 << " = " << num1 * num2;
          break;
        
        default:
          cout << "operation is not valid \n";
    }

 return 0;   
}
