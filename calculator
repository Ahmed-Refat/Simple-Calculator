// simple calculator
#include <iostream>
using namespace std;
int main() {

   cout << "enter the first number: \n";
   int first_number;
   cin >> first_number;

    cout << "choose opration number: \n";
    cout << "[1] + \n";
    cout << "[2] - \n";
    cout << "[3] / \n";
    cout << "[4] * \n";
    int opration;
    cin >> opration;
    
     cout << "enter the second number: \n";
   int second_number;
   cin >> second_number;
    
    if (opration == 1)
    {
          cout << first_number + second_number << "\n";
    }
    else  if (opration == 2)
    {
          cout << first_number - second_number << "\n";
    }
    else if (opration == 3)
    {
          cout << first_number / second_number << "\n";
    }
    else if (opration == 4)
    {
          cout << first_number * second_number << "\n";
    }
    else if (opration != 1,2,3,4)
    {
        cout << "opration is not valid or enter the number";
    }

    return 0;
}
